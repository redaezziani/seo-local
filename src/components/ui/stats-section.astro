---
import Counter from '../react/counter';

const stats = [
  { label: 'Local Businesses Ranked', value: 150, suffix: '+' },
  { label: 'Average Traffic Increase', value: 275, suffix: '%' },
  { label: 'First Page Rankings', value: 98, suffix: '%' },
  { label: 'Local SEO Projects', value: 200, suffix: '+' },
];
---

<section class="lg:mt-4 mt-44 w-full max-w-[100rem]">
  <div class="max-w-4xl">
    <div class="grid grid-cols-2 px-4 md:grid-cols-4 gap-8 md:gap-12">
      {
        stats.map((stat) => (
          <div class=" space-y-2">
            <div class="text-2xl md:text-4xl font-bold text-primary">
              <Counter
                className=" text-zinc-800"
                value={stat.value}
                direction="up"
                client:visible
              />
              <span class="text-zinc-800">{stat.suffix}</span>
            </div>
            <p class=" text-muted-foreground text-sm font-medium">
              {stat.label}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
